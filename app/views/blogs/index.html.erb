<h1>Home</h1>
<%= link_to 'Create Post', new_blog_path %>
<div>

  <div>
    <% @blogs.each do |b| %>
      <%= image_tag b.user.image.url %>
      <%= b.user.name %><br>
      <%= image_tag b.image.url %><br>
      <%= b.content %>

      <%= link_to 'View', blog_path(b.id) %>
      <%= link_to 'Edit', edit_blog_path(b.id), data: {confirm: "Confirm Edit!"} %>
      <%= link_to 'Delete', blog_path(b.id), method: :delete, data: {confirm: "Confirm Delete!"} %>
      <% end %>
  </div>
</div>
