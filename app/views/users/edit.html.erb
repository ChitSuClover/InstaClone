<h1>Edit Account</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error")%></h2>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div>
<%= form_with(model: @user, local: true, url: user_path) do |f| %>
  <%= f.text_field :name, placeholder: "Name"%><br>
  <%= f.text_field :email, placeholder: "Email"%><br>
  <%= f.password_field :password, placeholder: "Password"%><br>
  <%= f.password_field :password_confirmation, placeholder: "Password Confirmation"%><br>
  <%= f.file_field :image %><br>
  <%= f.submit "Update Account" %>
<% end %>
</div>
